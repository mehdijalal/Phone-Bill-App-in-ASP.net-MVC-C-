@model IEnumerable<PhoneBill.ViewModels.EmpInboxVM>
<div id="page">
    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <h2>User Inbox</h2>


    <table class="table">
        <tr>
            <th class="h_title">
                Status
            </th>

            <th class="h_title">
                From
            </th>
            <th class="h_title">
                Phone Number
            </th>
            <th class="h_title">
                Bill Year
            </th>
            <th class="h_title">
                Bill Month
            </th>
            <th class="h_title">
                Message
            </th>

            <th class="h_title">
                Date Created
            </th>
            <th class="h_title">
                Date Modified
            </th>
            <th class="h_title" style="width:20%">
                Action
            </th>
        </tr>

        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (item.SupStatus == 1)
                    {
                        <span class="tyellow">Pending</span>
                    }
                    else if (item.SupStatus == 2)
                    {
                        <span class="tgreen">Approved</span>
                    }
                    else if(item.SupStatus==4)
                    {
                        <span class="tblue">Resubmitted</span>
                    }
                    else
                    {
                        <span class="tred">Rejected</span>
                    }
                </td>

                <td>
                    @item.EmailAddress
                </td>
                <td>
                    @item.EmpPhoneNumber
                </td>
                <td>
                    @item.year
                </td>
                <td>
                    @item.month
                </td>
                <td style="width:15%;">
                    @item.Message
                </td>
                <td>
                    @item.CreatedDate
                </td>
                <td>
                    @item.ModifiedDate
                </td>
                <td>
                    @if(item.SupStatus==2)
                    {
                        <span style="color:#4b9f2e">Approved</span>
                    }
                    else if (item.SupStatus == 3)
                    {

                        @Html.ActionLink("Resubmit", "ResubmitMessage", new { inbox_id = item.Id}, new { @class = "btn btn-info smbtn" })
                    }
                    else if(item.SupStatus==4)
                    {
                        <span class="tblue">Resubmitted</span>
                    }


                </td>

            </tr>
            i++;
        }
        <tr>
            <td colspan="10">
                @Html.Raw(ViewBag.link)

                @ViewBag.Start <i style="color:#ff0000">Of</i>
                @ViewBag.total_rec
            </td>
        </tr>
    </table>
</div>


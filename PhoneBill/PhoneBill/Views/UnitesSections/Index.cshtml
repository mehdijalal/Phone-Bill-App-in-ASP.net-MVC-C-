@model IEnumerable<PhoneBill.Models.UnitesSections>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UnitSectionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SectionHeadEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SectionPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Extension)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FinanceCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Remarks)
        </th>
